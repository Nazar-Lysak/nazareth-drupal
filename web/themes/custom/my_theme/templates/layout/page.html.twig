<div class="layout-container">
  <header>
    <div class="container">
      {{ page.header }}
    </div>    
  </header>
  <main>
    <div class="container">
      {% if page.content.system_main['#attached']['drupalSettings'] %}
      {{page.content}}        
    {% else %}
      <div id="root"></div> 
    {% endif %}
    </div>    
  </main>
  <footer>
    <div class="container">
      {{ page.footer }}
    </div>   
  </footer>
</div>